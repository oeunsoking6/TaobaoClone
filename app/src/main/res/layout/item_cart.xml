<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp">

            <RadioButton
                android:id="@+id/storeSelection"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:buttonTint="#CCCCCC"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TMALL"
                android:textStyle="bold"
                android:textColor="#FF0036"
                android:textSize="12sp"
                android:layout_marginStart="4dp"/>

            <TextView
                android:id="@+id/storeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Store Name"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/arrow_down_float"
                android:rotation="-90"
                app:tint="#999999"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <RadioButton
                android:id="@+id/itemSelection"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:buttonTint="#CCCCCC"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F8F8F8">
                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/productVariant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Variant Info..."
                    android:textColor="#999999"
                    android:textSize="11sp"
                    android:background="#F9F9F9"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free shipping"
                    android:textColor="#2ecc71"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buy 1 get 2% off"
                        android:textSize="9sp"
                        android:textColor="#FF5000"
                        android:background="#FFF2E8"
                        android:paddingHorizontal="4dp"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$2 off"
                        android:textSize="9sp"
                        android:textColor="#FF5000"
                        android:background="#FFF2E8"
                        android:paddingHorizontal="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/productPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FF5000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discounted"
                            android:textSize="10sp"
                            android:textColor="#FF5000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F5F5F5"
                        android:gravity="center_vertical"
                        android:padding="2dp">

                        <ImageButton
                            android:id="@+id/btnMinus"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_input_delete"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackground"
                            app:tint="#999999"/>

                        <TextView
                            android:id="@+id/productQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center"
                            android:minWidth="24dp"/>

                        <ImageButton
                            android:id="@+id/btnPlus"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_input_add"
                            android:padding="6dp"
                            android:background="?attr/selectableItemBackground"
                            app:tint="#999999"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>